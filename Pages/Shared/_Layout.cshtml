@inject IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SuppliesManagement.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area=""
                    asp-page="/@(HttpContextAccessor.HttpContext.Session.GetInt32("RoleId") == 1 ? "Admin/AdminDashboard" : HttpContextAccessor.HttpContext.Session.GetInt32("RoleId") == 2 ? "SuppliesManager/SuppliesDashboard" : "User/DanhSachHangNhan")">
                    <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQRBeTHMY_NPPayr4I8txjPRXuIIrdvk7UlEw&s" alt="Quản Lý Kho"
                        height="30">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        @if (HttpContextAccessor.HttpContext.Session.GetInt32("RoleId") == 1 ||
                                                HttpContextAccessor.HttpContext.Session.GetInt32("RoleId") == 2)
                        {
                            <li class="nav-item">
                                <a class="nav-link fw-bold" asp-area="" asp-page="/SuppliesManager/DanhSachHoaDonNhap">DS
                                    Hóa Đơn
                                    Nhập</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link fw-bold" asp-area="" asp-page="/SuppliesManager/DanhSachHoaDonXuat">DS
                                    Hóa Đơn
                                    Xuất</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link fw-bold" asp-area="" asp-page="/SuppliesManager/NhapMuaHangHoa">Nhập Hàng
                                    Hóa</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link fw-bold" asp-area="" asp-page="/SuppliesManager/XuatHangHoa">Xuất Hàng
                                    Hóa</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle fw-bold" href="#" id="navbarDropdown" role="button"
                                    data-bs-toggle="dropdown" aria-expanded="false">
                                    DS Hàng Hóa
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item" asp-area="" asp-page="/SuppliesManager/DanhSachHang">Tất Cả
                                            Hàng Hóa</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-page="/SuppliesManager/CongCuDungCu">Công
                                            Cụ Dụng Cụ</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-page="/SuppliesManager/VatTu">Vật Tư</a>
                                    </li>
                                    <li><a class="dropdown-item" asp-area="" asp-page="/SuppliesManager/TaiSanCoDinh">Tài
                                            Sản Cố Định</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-page="/SuppliesManager/PhuTungThayThe">Phụ
                                            Tùng Thay Thế</a></li>
                                </ul>
                            </li>
                        }
                        @if (HttpContextAccessor.HttpContext.Session.GetInt32("RoleId") == 1)
                        {
                            <li class="nav-item">
                                <a class="nav-link fw-bold" asp-area="" asp-page="/Admin/DanhSachTaiKhoan">Quản lý tài
                                    khoản</a>
                            </li>
                        }
                        @if (HttpContextAccessor.HttpContext.Session.GetInt32("RoleId") == 3)
                        {
                            <li class="nav-item">
                                <a class="nav-link fw-bold" asp-area="" asp-page="/User/DanhSachHangNhan">Danh Sách Hàng
                                    Nhận</a>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav">
                        @if (HttpContextAccessor.HttpContext.Session.GetString("Username") != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link fw-bold" asp-page="/Common/Profile">
                                    ✨ Xin chào @HttpContextAccessor.HttpContext.Session.GetString("Fullname") ⭐
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-primary nav-link fw-bold" href="javascript:void(0);" onclick="confirmLogout()">Đăng
                                    xuất</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <div class="row">
            <nav id="sidebar" class="col-md-3 col-lg-2 d-md-block bg-light sidebar">
                <div class="position-sticky">
                    <ul class="nav flex-column">
                        @if (HttpContextAccessor.HttpContext.Session.GetInt32("RoleId") == 1 ||
                                                HttpContextAccessor.HttpContext.Session.GetInt32("RoleId") == 2)
                        {
                            <li class="nav-item">
                                <a class="nav-link fw-bold" asp-area=""
                                    asp-page="/@(HttpContextAccessor.HttpContext.Session.GetInt32("RoleId") == 1 ? "Admin/AdminDashboard" : "SuppliesManager/SuppliesDashboard")">Số
                                    liệu thống kê</a>
                            </li>
                        }
                                                @if (HttpContextAccessor.HttpContext.Session.GetInt32("RoleId") == 1)
                        {
                            <li class="nav-item">
                                <a class="nav-link fw-bold" asp-area="" asp-page="/Admin/DanhSachTaiKhoan">Quản lý tài
                                    khoản</a>
                            </li>
                        }
                        @if (HttpContextAccessor.HttpContext.Session.GetInt32("RoleId") == 1 ||
                                                HttpContextAccessor.HttpContext.Session.GetInt32("RoleId") == 2)
                        {
                            <li class="nav-item">
                                <a class="nav-link fw-bold d-flex justify-content-between align-items-center"
                                    data-bs-toggle="collapse" href="#collapseNhapHang" role="button" aria-expanded="false"
                                    aria-controls="collapseNhapHang">
                                    Nhập hàng hóa
                                    <span class="toggle-icon">+</span>
                                </a>
                                <div class="collapse" id="collapseNhapHang">
                                    <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small">
                                        <li><a class="nav-link" asp-page="/SuppliesManager/NhapMuaHangHoa">Nhập hóa đơn</a>
                                        </li>
                                        <li><a class="nav-link" asp-page="/SuppliesManager/DanhSachHoaDonNhap">DS phiếu nhập kho</a></li>
                                    </ul>
                                </div>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link fw-bold d-flex justify-content-between align-items-center"
                                    data-bs-toggle="collapse" href="#collapseXuatHang" role="button" aria-expanded="false"
                                    aria-controls="collapseXuatHang">
                                    Xuất hàng hóa
                                    <span class="toggle-icon">+</span>
                                </a>
                                <div class="collapse" id="collapseXuatHang">
                                    <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small">
                                        <li><a class="nav-link" asp-page="/SuppliesManager/XuatHangHoa">Xuất hóa đơn</a>
                                        </li>
                                        <li><a class="nav-link" asp-page="/SuppliesManager/DanhSachHoaDonXuat">DS phiếu xuất kho</a></li>
                                    </ul>
                                </div>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link fw-bold d-flex justify-content-between align-items-center"
                                    data-bs-toggle="collapse" href="#collapseDanhSachHangHoa" role="button"
                                    aria-expanded="false" aria-controls="collapseDanhSachHangHoa">
                                    Danh Sách Hàng Hóa
                                    <span class="toggle-icon">+</span>
                                </a>
                                <div class="collapse" id="collapseDanhSachHangHoa">
                                    <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small">
                                        <li><a class="nav-link" asp-page="/SuppliesManager/DanhSachHang">Tất Cả Hàng Hóa</a>
                                        </li>
                                        <li><a class="nav-link" asp-page="/SuppliesManager/CongCuDungCu">Công Cụ Dụng Cụ</a>
                                        </li>
                                        <li><a class="nav-link" asp-page="/SuppliesManager/VatTu">Vật Tư</a></li>
                                        <li><a class="nav-link" asp-page="/SuppliesManager/TaiSanCoDinh">Tài Sản Cố Định</a>
                                        </li>
                                        <li><a class="nav-link" asp-page="/SuppliesManager/PhuTungThayThe">Phụ Tùng Thay
                                                Thế</a></li>
                                    </ul>
                                </div>
                            </li>
                        }
                        @if (HttpContextAccessor.HttpContext.Session.GetInt32("RoleId") == 3)
                        {
                            <li class="nav-item">
                                <a class="nav-link fw-bold" asp-area="" asp-page="/User/DanhSachHangNhan">Danh Sách Hàng
                                    Nhận</a>
                            </li>
                        }
                    </ul>
                </div>
            </nav>

            <main role="main" class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Phần mềm quản lý kho
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
<script>
    function confirmLogout() {
        if (confirm("Bạn có chắc chắn muốn đăng xuất không?")) {
            window.location.href = '/Common/SignOut';
        }
    }

    document.addEventListener('DOMContentLoaded', function () {
        var collapses = document.querySelectorAll('.collapse');
        collapses.forEach(function (collapse) {
            collapse.addEventListener('show.bs.collapse', function () {
                this.previousElementSibling.querySelector('.toggle-icon').textContent = '-';
                localStorage.setItem(collapse.id, 'true');
            });
            collapse.addEventListener('hide.bs.collapse', function () {
                this.previousElementSibling.querySelector('.toggle-icon').textContent = '+';
                localStorage.setItem(collapse.id, 'false');
            });

            // Restore state from localStorage
            if (localStorage.getItem(collapse.id) === 'true') {
                collapse.classList.add('show');
                collapse.previousElementSibling.querySelector('.toggle-icon').textContent = '-';
            }
        });
    });
</script>