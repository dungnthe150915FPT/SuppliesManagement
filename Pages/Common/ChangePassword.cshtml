@page
@model SuppliesManagement.Pages.Common.ChangePasswordModel
@{
}
<h2>Đổi mật khẩu</h2>

<div class="container col-md-6">
    <div class="card bg-light mt-5">
        <div class="card-body">
            <div class="row">
                <div class="col-md-7 mx-auto">
                    <h2 class="text-center">Phần mềm Quản Lý Kho</h2>
                    <form method="post" class="mt-4">
                        @{
                            if (!string.IsNullOrWhiteSpace(error))
                            {
                                <div class="alert alert-danger" role="alert">
                                    @error
                                </div>
                            }
                        }
                        <div class="form-group">
                            <label for="username">Tài khoản:</label>
                            <input type="text" class="form-control" id="username" name="Username"
                                placeholder="Tên đăng nhập" required>
                        </div>
                        <div class="form-group position-relative">
                            <label for="password">Mật khẩu:</label>
                            <input type="password" class="form-control" id="password" name="Password"
                                placeholder="Mật khẩu" required>
                            <span class="show-btn position-absolute" style="right: 10px; top: 60%;" role="button">
                                <i class="fas fa-eye" id="togglePassword" style="cursor: pointer;"></i>
                            </span>
                        </div>
                        <br>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary w-100">Sign In</button>
                        </div>
                    </form>
                    @*                        <p><a href="/ForgotPassword">Quên mật khẩu ?</a></p>*@
                </div>
            </div>
        </div>
    </div>
</div>
@if (TempData["SuccessMessage"] != null)
{
    <div id="successAlert" class="alert alert-success mt-3" role="alert">
        @TempData["SuccessMessage"]
    </div>
}
<script src="~/js/Profile.js"></script>
<link href="~/css/profile.css" rel="stylesheet" />