@page
@model SuppliesManagement.Pages.Common.ChangePasswordModel
@{
    ViewData["Title"] = "Đổi Mật Khẩu";
}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
<link rel="stylesheet" href="~/css/Common/ChangePassword.css" />
<h1>Đổi mật khẩu</h1>
@if (TempData["SuccessMessage"] != null)
{
    <div id="successAlert" class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div id="errorAlert" class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}
<div class="container col-md-6">
    <div class="card bg-light mt-5">
        <div class="card-body">
            <div class="row">
                <div class="col-md-7 mx-auto">
                    <form method="post" class="mt-4">
                        <div class="form-group position-relative">
                            <label for="currentPassword">Mật khẩu hiện tại:</label>
                            <input type="password" class="form-control" id="currentPassword" name="CurrentPassword"
                                placeholder="Mật khẩu" value="@Model.CurrentPassword" required>
                            <span class="show-btn position-absolute" style="right: 10px; top: 60%;" role="button">
                                <i class="fas fa-eye" id="toggleCurrentPassword" style="cursor: pointer;"></i>
                            </span>
                        </div>
                        <div class="form-group position-relative">
                            <label for="newPassword">Mật khẩu mới:</label>
                            <input type="password" class="form-control" id="newPassword" name="NewPassword"
                                placeholder="Mật khẩu mới" required>
                            <span class="show-btn position-absolute" style="right: 10px; top: 60%;" role="button">
                                <i class="fas fa-eye" id="toggleNewPassword" style="cursor: pointer;"></i>
                            </span>
                        </div>
                        <div class="form-group position-relative">
                            <label for="reNewPassword">Nhập lại mật khẩu mới:</label>
                            <input type="password" class="form-control" id="reNewPassword" name="ConfirmNewPassword"
                                placeholder="Nhập lại mật khẩu mới" required>
                            <span class="show-btn position-absolute" style="right: 10px; top: 60%;" role="button">
                                <i class="fas fa-eye" id="toggleReNewPassword" style="cursor: pointer;"></i>
                            </span>
                        </div>
                        <br>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary w-100">Đổi mật khẩu</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/js/Common/ChangePassword.js"></script>